{
    "manifest_version": 2,
    "name": "test-chrome-extension",
    "version": "1.0",
    "icons": {
        "128": "images/icon-128.png"
    },
    "page_action": {
        "default_icon": {
            "32": "images/icon-32.png"
        }
    },
    "options_page": "options.html",
    "background": {
        "scripts": [
            "background.js"
        ],
        "persistent": false
    },
    "permissions": [
        "declarativeContent",
        "storage"
    ],
    "content_security_policy": "script-src 'self'; object-src 'self'"
}